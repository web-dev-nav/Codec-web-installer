{
    "name": "your-vendor/laravel-installer",
    "description": "WordPress-like installer package for Laravel applications",
    "type": "library",
    "keywords": ["laravel", "installer", "setup", "deployment"],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0",
        "nesbot/carbon": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "YourVendor\\LaravelInstaller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YourVendor\\LaravelInstaller\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourVendor\\LaravelInstaller\\InstallerServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}